# AADD Configuration File
# Copy this file to .env and fill in your actual values

# ============================================
# Claude API Configuration (REQUIRED)
# ============================================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-your-api-key-here

# Claude model to use (recommended: claude-sonnet-4-5-20251101)
CLAUDE_MODEL=claude-sonnet-4-5-20251101

# Maximum tokens for Claude responses
CLAUDE_MAX_TOKENS=8000

# Extended thinking budget (improves creative output)
CLAUDE_THINKING_BUDGET=2000

# ============================================
# Anniversary Data APIs (OPTIONAL)
# ============================================
# API Ninjas Historical Events API (optional)
# Get free API key from: https://api-ninjas.com/api/historicalevents
API_NINJAS_KEY=

# ============================================
# Git Configuration
# ============================================
# Your git username and email for commits
GIT_USER_NAME=your-github-username
GIT_USER_EMAIL=your-email@example.com

# Git remote and branch names
GIT_REMOTE=origin
GIT_BRANCH=main

# ============================================
# Feature Flags
# ============================================
# Enable automatic git push (true/false)
# IMPORTANT: Set to 'true' only after forking and configuring your own repository
ENABLE_GIT_PUSH=false

# Enable Claude extended thinking (true/false)
ENABLE_EXTENDED_THINKING=true

# Enable error email notifications (true/false)
ENABLE_ERROR_EMAILS=false

# ============================================
# Retry Configuration
# ============================================
# Maximum number of retries for failed operations
MAX_RETRIES=3

# Delay between retries in seconds
RETRY_DELAY=5

# ============================================
# Email Notifications (OPTIONAL)
# ============================================
# Only needed if ENABLE_ERROR_EMAILS=true
ERROR_EMAIL_FROM=
ERROR_EMAIL_TO=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
